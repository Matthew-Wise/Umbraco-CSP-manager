{
  // Target primary AI development tools
  "targets": ["claudecode", "cursor", "copilot"],

  // Enable all features for comprehensive AI assistance
  "features": [
    "rules", // Rule files for coding standards
    "commands", // Command templates for generation
    "ignore", // Ignore patterns for sensitive files
    "mcp", // Model Context Protocol (if available)
    "subagents" // Specialized AI agents (if available)
  ],

  // Configuration options
  "verbose": true, // Detailed output during generation
  "delete": false, // Preserve existing configurations

  // Directory structure
  "aiRulesDir": ".rulesync", // Rules directory (current structure)
  "aiCommandsDir": ".rulesync/commands", // Commands subdirectory

  // Project-specific exclusions
  "exclude": [
    // Exclude any tools that don't work well with Umbraco/CSP projects
  ],

  // Watch configuration for development
  "watch": {
    "enabled": true,
    "debounce": 500, // 500ms debounce for file changes
    "ignore": ["**/node_modules/**", "**/bin/**", "**/obj/**", "**/.git/**"]
  }
}
